%table.table.table-bordered.table-striped#sortable{:data => {update_url:sort_recipes_path}}
  %thead
    %tr
      %th= "Title"
      %th= "Description"
      %th &nbsp;

  %tbody
    - @recipes.each do |thing|

      %tr{data: {recipe_id: "#{thing.id}"}, class: 'recipe'}
        %td= thing.title
        %td= thing.row_order
        %td
          = link_to 'show', recipe_path(thing), :class => 'btn'
          = link_to 'edit', edit_recipe_path(thing), :class => 'btn btn-primary'
          = link_to 'destroy', recipe_path(thing), method: :delete, confirm: "Are you sure?", :class => 'btn btn-danger'
